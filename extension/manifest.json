{
    "name": "Lazy Netflix",
    "description": "DonÂ´t stop watching Netflix because you are 3 episodes in",
    "version": "0.1.1",
    "manifest_version": 3,
    "content_scripts": [{
        "matches": ["https://www.netflix.com/*"],
        "js": ["content.js"]
    }],
    "background": {
        "srvice_worker": ["background.js"]
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "bookmarks"
    ],
    "host_permissions": [
        "https://www.netflix.com/watch/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Lazy Netflix"
    },

    "options_page": "options.html",
    "icons": {
        "16": "./icons/LazyNetflix-16.png",
        "48": "./icons/LazyNetflix-48.png",
        "128": "./icons/LazyNetflix-128.png"
    }
}